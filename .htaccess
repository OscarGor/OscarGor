# 啟用重寫引擎
RewriteEngine On

# 如果請求的不是真實文件
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

# 重定向所有請求到 index.html (前端路由)
RewriteRule ^(.*)$ index.html [L,QSA]

# 設置 PHP 錯誤顯示
php_flag display_errors on
php_value error_reporting E_ALL

# 設置默認字符集
AddDefaultCharset UTF-8

# 設置 API 文件的權限
<FilesMatch "\.(php)$">
    Require all granted
</FilesMatch>